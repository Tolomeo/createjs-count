{
  "compilerOptions": {
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "esModuleInterop": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.(spec|test).ts"]
}
